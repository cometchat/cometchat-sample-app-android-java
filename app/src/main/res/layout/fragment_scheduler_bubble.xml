<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="50dp"
    tools:context=".fragments.shared.views.SchedulerBubbleFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/scheduler_bubble_card"
        android:layout_gravity="center"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        android:layout_height="wrap_content">

        <com.cometchat.chatuikit.shared.views.CometChatSchedulerBubble.CometChatSchedulerBubble
            android:id="@+id/scheduler_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>