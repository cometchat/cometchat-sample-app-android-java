<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.inscripts.cometchatpulse.demo.Activity.LoginActivity">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:src="@drawable/cc"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_uid"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/enter_uid"
        app:boxStrokeColor="@color/secondaryDarkColor"
        app:boxStrokeWidth="1dp"
        app:counterOverflowTextAppearance="@color/error"
        app:counterTextAppearance="@style/AppTheme.HelpText"
        app:errorEnabled="true"
        app:errorTextAppearance="@color/error"
        app:helperText="Required*"
        app:helperTextEnabled="true"
        app:helperTextTextAppearance="@style/AppTheme.HelpText"
        app:hintAnimationEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/guid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="text|textCapSentences"
            android:maxLines="1"
            android:hint="@string/enter_uid"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_login"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Login"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        android:textColor="@color/primaryLightColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/primaryTextColor"
        android:text="@string/haven_t_created_a_user_yet_select_one_of_our_default_users_for_testing"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/sample_list"
        android:layout_width="match_parent"
        android:numColumns="2"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_height="wrap_content"/>

</LinearLayout>